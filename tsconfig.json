{
	"compilerOptions":{
		"outDir":"./dist/commonjs",
		"allowJs":true,//TODO
		"checkJs":true,//TODO
		"declaration":true,
		"target":"es5",

		"allowUnreachableCode":true,//TODO
		"allowUnusedLabels":true,//TODO
		"alwaysStrict":false,//TODO
		"noImplicitAny":true,
		"noImplicitReturns":false,//TODO
		"noImplicitThis":true,
		"noFallthroughCasesInSwitch":false,//TODO
		"noUnusedLocals":true,
		"noUnusedParameters":true,
		"suppressExcessPropertyErrors":false,
		"suppressImplicitAnyIndexErrors":false,
		"strictFunctionTypes":false,//TODO
		"strictNullChecks":true,
		"strictPropertyInitialization":true
	},
	"include":["./src/**/*"]
}
